{
  "manifest_version": 2,
  "name": "Claude Conversation Exporter",
  "version": "1.0.0",
  "description": "Export your Claude.ai conversations with full message history",

  "browser_specific_settings": {
    "gecko": {
      "id": "claude-exporter@anthropic.community",
      "strict_min_version": "109.0"
    }
  },

  "permissions": ["activeTab", "storage", "tabs", "https://claude.ai/*"],

  "browser_action": {
    "default_popup": "src/firefox/scripts/popup.html",
    "default_icon": {
      "16": "src/icon16.png",
      "48": "src/icon48.png",
      "128": "src/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["src/firefox/scripts/content.ts"],
      "css": ["src/content-styles.css"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["src/firefox/scripts/background.ts"]
  },

  "icons": {
    "16": "src/icon16.png",
    "48": "src/icon48.png",
    "128": "src/icon128.png"
  },

  "options_ui": {
    "page": "src/firefox/scripts/options.html",
    "browser_style": false
  },

  "web_accessible_resources": ["src/firefox/scripts/browse.html"]
}
