{
  "name": "claude-conversation-exporter",
  "version": "1.0.0",
  "description": "Export your Claude.ai conversations in various formats - Chrome and Firefox extension with TypeScript support",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:chrome": "wxt -b chrome",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "type-check": "wxt type-check",
    "lint": "eslint entrypoints/**/*.ts src/**/*.ts",
    "lint:fix": "eslint entrypoints/**/*.ts src/**/*.ts --fix",
    "format": "prettier --check \"**/*.{ts,html,css,json}\"",
    "format:fix": "prettier --write \"**/*.{ts,html,css,json}\"",
    "test": "vitest run",
    "test:ui": "vitest run --ui",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm type-check && pnpm lint && pnpm format && pnpm test",
    "clean": "rm -rf .wxt .output dist"
  },
  "keywords": [
    "claude",
    "anthropic",
    "export",
    "browser-extension",
    "firefox",
    "chrome",
    "typescript"
  ],
  "author": "",
  "license": "",
  "packageManager": "pnpm@10.18.1",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/chrome": "^0.1.24",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/jszip": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.5",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4",
    "web-ext": "^9.0.0",
    "wxt": "^0.20.11"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  }
}
